infisical:
  address: "https://app.infisical.com"

auth:
  type: "universal-auth"
  config:
    client-id: "/config/client-id"
    client-secret: "/config/client-secret"
    remove_client_secret_on_read: false

templates:
  # ===== Vaultwarden =====
  # Infisical 路径: /vaultwarden
  - destination-path: /infisical-secrets/vaultwarden.env
    template-content: |
      {{- with secret "<项目ID>" "prod" "/vaultwarden" }}
      {{- range . }}
      {{ .Key }}={{ .Value }}
      {{- end }}
      {{- end }}
    config:
      polling-interval: 300s

